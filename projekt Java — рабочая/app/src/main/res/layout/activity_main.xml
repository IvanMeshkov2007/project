<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/My_fin_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Мои Финансы"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/My_fin_LV"

        />
    <ListView
        android:id="@+id/My_fin_LV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/My_fin_TV"
        />
    <Button
        android:id="@+id/Me_Fin_BTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить Месяц"
        app:layout_constraintTop_toBottomOf="@id/My_fin_LV"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>